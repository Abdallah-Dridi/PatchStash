<style>
    @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap');

    :root {
        --bg: #050915;
        --panel: rgba(14, 22, 45, 0.82);
        --panel-strong: rgba(22, 33, 68, 0.92);
        --text: #f8fafc;
        --muted: #9ca8c6;
        --border: rgba(255, 255, 255, 0.08);
        --accent: #7c3aed;
        --accent-2: #22d3ee;
        --radius: 18px;
        --shadow: 0 30px 90px rgba(5, 12, 35, 0.65);
    }

    * { box-sizing: border-box; }

    body.auth-page {
        margin: 0;
        font-family: 'Space Grotesk', system-ui, -apple-system, sans-serif;
        background:
            radial-gradient(circle at 18% 20%, rgba(124, 58, 237, 0.16), transparent 26%),
            radial-gradient(circle at 78% 18%, rgba(34, 211, 238, 0.18), transparent 28%),
            #050915;
        color: var(--text);
        -webkit-font-smoothing: antialiased;
    }

    a {
        color: var(--accent-2);
        text-decoration: none;
        font-weight: 600;
        transition: color 0.2s ease, text-shadow 0.25s ease;
    }

    a:hover { color: #67e8f9; text-shadow: 0 0 18px rgba(34, 211, 238, 0.35); }

    main.auth-main {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: clamp(1.5rem, 3vw, 3rem);
        position: relative;
        overflow: hidden;
    }

    .auth-card {
        width: min(1100px, 100%);
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
        background: linear-gradient(135deg, rgba(13, 18, 35, 0.9), rgba(9, 13, 26, 0.92));
        border: 1px solid var(--border);
        border-radius: 24px;
        box-shadow: var(--shadow);
        overflow: hidden;
        position: relative;
        isolation: isolate;
    }

    .auth-hero {
        padding: clamp(2rem, 4vw, 3rem);
        background: radial-gradient(circle at 20% 20%, rgba(124, 58, 237, 0.25), transparent 55%), radial-gradient(circle at 80% 10%, rgba(34, 211, 238, 0.22), transparent 45%), var(--panel);
        border-right: 1px solid var(--border);
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
        position: relative;
    }

    .pill {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        padding: 0.45rem 0.8rem;
        border-radius: 999px;
        border: 1px solid var(--border);
        background: rgba(255, 255, 255, 0.04);
        color: var(--muted);
        font-size: 0.9rem;
        letter-spacing: 0.01em;
    }

    .auth-hero h1 {
        margin: 0;
        font-size: clamp(1.9rem, 3vw, 2.6rem);
        line-height: 1.2;
    }

    .auth-hero p {
        margin: 0;
        color: var(--muted);
        line-height: 1.6;
    }

    .hero-points {
        display: grid;
        gap: 0.65rem;
        margin-top: 0.25rem;
        color: var(--text);
    }

    .hero-points span {
        display: inline-flex;
        align-items: center;
        gap: 0.45rem;
        font-weight: 500;
    }

    .dot {
        width: 10px;
        height: 10px;
        border-radius: 999px;
        background: linear-gradient(130deg, var(--accent), var(--accent-2));
        box-shadow: 0 0 0 6px rgba(124, 58, 237, 0.15);
    }

    .auth-body {
        padding: clamp(2rem, 4vw, 3.25rem);
        background: var(--panel-strong);
        display: flex;
        flex-direction: column;
        gap: 1.35rem;
    }

    .eyebrow {
        letter-spacing: 0.08em;
        text-transform: uppercase;
        font-size: 0.75rem;
        color: var(--muted);
        margin: 0;
    }

    .auth-title {
        margin: 0;
        font-size: clamp(1.6rem, 2vw, 2rem);
        line-height: 1.3;
    }

    .auth-sub {
        margin: 0 0 0.35rem;
        color: var(--muted);
        line-height: 1.5;
    }

    form.auth-form {
        display: flex;
        flex-direction: column;
        gap: 1.1rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    label {
        font-weight: 600;
        font-size: 0.95rem;
        letter-spacing: 0.01em;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"] {
        border: 1px solid var(--border);
        background: rgba(255, 255, 255, 0.03);
        padding: 0.95rem 1rem;
        border-radius: var(--radius);
        color: var(--text);
        font-size: 1rem;
        transition: border 0.2s ease, box-shadow 0.2s ease, transform 0.15s ease;
    }

    input:focus {
        outline: none;
        border-color: rgba(124, 58, 237, 0.7);
        box-shadow: 0 10px 40px rgba(124, 58, 237, 0.25);
        transform: translateY(-1px);
    }

    .form-error {
        color: #fecaca;
        background: rgba(239, 68, 68, 0.12);
        border: 1px solid rgba(239, 68, 68, 0.35);
        border-radius: var(--radius);
        padding: 0.6rem 0.8rem;
        font-size: 0.9rem;
    }

    .form-meta {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        color: var(--muted);
        font-size: 0.9rem;
        flex-wrap: wrap;
    }

    .btn {
        border: none;
        cursor: pointer;
        border-radius: var(--radius);
        padding: 1rem 1.05rem;
        font-size: 1rem;
        font-weight: 700;
        color: #060a18;
        background: linear-gradient(120deg, #c084fc, #22d3ee 60%, #60a5fa);
        box-shadow: 0 18px 45px rgba(34, 211, 238, 0.35);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .btn:hover { transform: translateY(-1.5px); box-shadow: 0 24px 55px rgba(34, 211, 238, 0.45); }
    .btn:active { transform: translateY(0); }

    .auth-meta {
        text-align: center;
        color: var(--muted);
        font-size: 0.95rem;
        margin-top: 0.75rem;
        line-height: 1.5;
    }

    .alert {
        background: rgba(239, 68, 68, 0.12);
        border: 1px solid rgba(239, 68, 68, 0.35);
        color: #fecaca;
        border-radius: var(--radius);
        padding: 0.8rem 0.95rem;
        font-size: 0.95rem;
    }

    .floating {
        position: absolute;
        inset: 0;
        pointer-events: none;
        z-index: -1;
    }

    .blob {
        position: absolute;
        width: 320px;
        height: 320px;
        filter: blur(90px);
        opacity: 0.55;
        border-radius: 50%;
        animation: drift 14s ease-in-out infinite alternate;
    }

    .blob.a { background: var(--accent); top: -60px; left: -40px; }
    .blob.b { background: var(--accent-2); bottom: -80px; right: -20px; animation-duration: 12s; }

    @keyframes drift {
        from { transform: translate3d(0, 0, 0) scale(1); }
        to { transform: translate3d(12px, -18px, 0) scale(1.08); }
    }

    @media (max-width: 900px) {
        .auth-hero { border-right: none; border-bottom: 1px solid var(--border); }
        .auth-body { padding: 1.75rem; }
    }
</style>
