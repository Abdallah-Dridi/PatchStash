{% extends 'admin/base.html.twig' %}

{% block title %}Asset Â· {{ asset.name }}{% endblock %}

{% block admin_content %}
<div class="page-head">
    <div>
        <p class="eyebrow">Asset</p>
        <h1>{{ asset.name }}</h1>
        <p class="text-muted">Environment, status, and lifecycle.</p>
    </div>
    <div class="actions">
        <a class="btn ghost" href="{{ path('app_asset_index') }}">Back</a>
        <a class="btn primary" href="{{ path('app_asset_edit', {'id': asset.id}) }}">Edit</a>
    </div>
</div>

<div class="admin-panel">
    <div class="meta-grid">
        <div class="detail-block">
            <p class="text-muted">Module</p>
            <p>{{ asset.module ? asset.module.name : 'Unassigned' }}</p>
        </div>
        <div class="detail-block">
            <p class="text-muted">Environment</p>
            <p><span class="badge neutral">{{ asset.environment }}</span></p>
        </div>
        <div class="detail-block">
            <p class="text-muted">Status</p>
            {% set status = asset.status|default('Pending') %}
            {% set statusClass = {
                'Active': 'active',
                'Pending': 'pending',
                'Deprecated': 'deprecated',
                'Failed': 'failed'
            }[status]|default('pending') %}
            <span class="badge {{ statusClass }}">{{ status }}</span>
        </div>
        <div class="detail-block">
            <p class="text-muted">Type</p>
            <p><span class="badge neutral">{{ asset.type }}</span></p>
        </div>
        <div class="detail-block">
            <p class="text-muted">Patch cycles</p>
            <p><span class="badge neutral">{{ asset.patchCycles|length }} linked</span></p>
        </div>
        <div class="detail-block">
            <p class="text-muted">Info</p>
            <p>{{ asset.info|default('No additional context') }}</p>
        </div>
    </div>
    <div class="detail-block" style="margin-top:1rem;">
        <p class="text-muted">Description</p>
        <p>{{ asset.description }}</p>
    </div>
</div>

{{ include('asset/_delete_form.html.twig', { asset: asset }) }}
{% endblock %}
