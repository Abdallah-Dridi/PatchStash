{% extends 'user/base.html.twig' %}

{% block title %}Project Â· {{ project.name }}{% endblock %}

{% block user_content %}
<div class="page-head">
    <div>
        <p class="eyebrow">Project</p>
        <h1>{{ project.name }}</h1>
        <p class="text-muted">Owner, status, and context.</p>
    </div>
    <div class="actions">
        <a class="btn ghost" href="{{ path('app_project_index') }}">Back</a>
        <a class="btn primary" href="{{ path('app_project_edit', {'id': project.id}) }}">Edit</a>
    </div>
</div>

<div class="admin-panel">
    <div class="meta-grid">
        <div class="detail-block">
            <p class="text-muted">Status</p>
            {% set status = project.status|default('Pending') %}
            {% set statusClass = {
                'Active': 'active',
                'Pending': 'pending',
                'Deprecated': 'deprecated',
                'Failed': 'failed'
            }[status]|default('pending') %}
            <span class="badge {{ statusClass }}">{{ status }}</span>
        </div>
        <div class="detail-block">
            <p class="text-muted">Owner</p>
            <p>{{ project.user ? project.user.username : 'Unassigned' }}</p>
        </div>
        <div class="detail-block">
            <p class="text-muted">Modules</p>
            <p><span class="badge neutral">{{ project.modules|length }} linked</span></p>
        </div>
        <div class="detail-block">
            <p class="text-muted">Info</p>
            <p>{{ project.info|default('No additional context') }}</p>
        </div>
    </div>
    <div class="detail-block" style="margin-top:1rem;">
        <p class="text-muted">Description</p>
        <p>{{ project.description }}</p>
    </div>
</div>

{{ include('project/_delete_form.html.twig', { project: project }) }}
{% endblock %}
