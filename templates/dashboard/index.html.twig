{% extends 'base.html.twig' %}

{% block title %}Dashboard · Coming Soon{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .dash-hero {
            max-width: 780px;
            margin: 4rem auto;
            text-align: center;
            padding: 2.5rem;
            border-radius: 18px;
            background: linear-gradient(135deg, rgba(168, 85, 247, 0.1), rgba(56, 189, 248, 0.08));
            border: 1px solid rgba(148, 163, 184, 0.25);
            box-shadow: 0 20px 50px rgba(15, 23, 42, 0.12);
        }
        .dash-hero h1 { margin: 0 0 0.6rem; }
        .dash-hero p { margin: 0 0 1.4rem; color: #6b7280; }
        .pill {
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
            padding: 0.45rem 0.9rem;
            border-radius: 999px;
            background: rgba(56, 189, 248, 0.12);
            color: #0ea5e9;
            font-weight: 600;
        }
        .cta-row { display: flex; justify-content: center; gap: 0.75rem; margin-top: 1.2rem; }
        .btn-soft {
            padding: 0.75rem 1.2rem;
            border-radius: 12px;
            border: 1px solid rgba(148, 163, 184, 0.35);
            background: #fff;
            cursor: pointer;
        }
        .btn-soft.primary {
            background: linear-gradient(120deg, #a855f7, #38bdf8);
            color: #fff;
            border: none;
            box-shadow: 0 10px 25px rgba(88, 28, 135, 0.18);
        }
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 1rem;
            margin-top: 2rem;
        }
        .card {
            padding: 1.1rem;
            border-radius: 14px;
            border: 1px solid rgba(148, 163, 184, 0.2);
            background: #fff;
            color: #111827;
        }
        .card h3 { margin: 0 0 0.4rem; }
        .muted { color: #6b7280; font-size: 0.95rem; }
    </style>
{% endblock %}

{% block body %}
    <div class="dash-hero">
        <div class="pill">Coming Soon</div>
        <h1>Hello {{ app.user ? app.user.username : 'there' }}</h1>
        <p>We’re crafting your Patchstash home. Soon you’ll see project summaries, patch-cycle status, and risk highlights here.</p>
        <div class="cta-row">
            <button class="btn-soft primary" disabled>View roadmap</button>
            <button class="btn-soft" disabled>Request feature</button>
        </div>
        <div class="grid">
            <div class="card">
                <h3>Projects</h3>
                <p class="muted">Track ownership, modules, and rollout phases.</p>
            </div>
            <div class="card">
                <h3>Assets</h3>
                <p class="muted">Map servers, services, and environments to patch cycles.</p>
            </div>
            <div class="card">
                <h3>Risk</h3>
                <p class="muted">Surface highest CVEs and upcoming deadlines.</p>
            </div>
            <div class="card">
                <h3>Reports</h3>
                <p class="muted">Generate audit-ready summaries in one click.</p>
            </div>
        </div>
    </div>
{% endblock %}
