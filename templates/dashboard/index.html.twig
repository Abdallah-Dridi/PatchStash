{% extends 'base.html.twig' %}

{% block title %}Dashboard · Coming Soon{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .dash-hero {
            max-width: 780px;
            margin: 4rem auto;
            text-align: center;
            padding: 2.5rem;
            border-radius: 18px;
            background: linear-gradient(135deg, rgba(15, 23, 42, 0.9), rgba(17, 24, 39, 0.85));
            border: 1px solid var(--app-border);
            box-shadow: var(--app-shadow);
        }
        .dash-hero h1 { margin: 0 0 0.6rem; }
        .dash-hero p { margin: 0 0 1.4rem; color: var(--app-muted); }
        .pill {
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
            padding: 0.45rem 0.9rem;
            border-radius: 999px;
            background: rgba(56, 189, 248, 0.16);
            color: #bae6fd;
            font-weight: 600;
            border: 1px solid rgba(56, 189, 248, 0.35);
        }
        .cta-row { display: flex; justify-content: center; gap: 0.75rem; margin-top: 1.2rem; }
        .btn-soft {
            padding: 0.75rem 1.2rem;
            border-radius: 12px;
            border: 1px solid var(--app-border);
            background: rgba(15, 23, 42, 0.6);
            color: var(--app-text);
            cursor: pointer;
        }
        .btn-soft.primary {
            background: linear-gradient(120deg, var(--app-accent), var(--app-accent-2));
            color: #fff;
            border: none;
            box-shadow: 0 12px 30px rgba(88, 28, 135, 0.25);
        }
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 1rem;
            margin-top: 2rem;
        }
        .card {
            padding: 1.1rem;
            border-radius: 14px;
            border: 1px solid var(--app-border);
            background: rgba(15, 23, 42, 0.7);
            color: var(--app-text);
        }
        .card h3 { margin: 0 0 0.4rem; }
        .muted { color: var(--app-muted); font-size: 0.95rem; }
        .card-link { text-decoration: none; color: inherit; display: block; }
        .card-link:hover .card {
            transform: translateY(-5px);
            border-color: rgba(168, 85, 247, 0.7);
            box-shadow: 0 16px 36px rgba(168, 85, 247, 0.2);
            transition: all 0.2s ease;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="dash-hero">
        <div class="pill">Coming Soon</div>
        <h1>Hello {{ app.user ? app.user.username : 'there' }}</h1>
        <p>We’re crafting your Patchstash home. Soon you’ll see project summaries, patch-cycle status, and risk highlights here.</p>
        <div class="cta-row">
            <button class="btn-soft primary" disabled>View roadmap</button>
            <button class="btn-soft" disabled>Request feature</button>
        </div>
        <div class="grid">
            <a href="{{ path('app_project_index') }}" class="card-link">
                <div class="card">
                    <h3>Projects</h3>
                    <p class="muted">Track ownership, modules, and rollout phases.</p>
                </div>
            </a>
            <a href="{{ path('app_asset_index') }}" class="card-link">
                <div class="card">
                    <h3>Assets</h3>
                    <p class="muted">Map servers, services, and environments to patch cycles.</p>
                </div>
            </a>
            <a href="{{ path('app_vulnerability_index') }}" class="card-link">
                <div class="card">
                    <h3>Risk</h3>
                    <p class="muted">Surface highest CVEs and upcoming deadlines.</p>
                </div>
            </a>
            <a href="{{ path('app_report_index') }}" class="card-link">
                <div class="card">
                    <h3>Reports</h3>
                    <p class="muted">Generate audit-ready summaries in one click.</p>
                </div>
            </a>
        </div>
    </div>
{% endblock %}
