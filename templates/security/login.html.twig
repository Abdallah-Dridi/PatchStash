{% extends 'base.html.twig' %}

{% block title %}Sign in · Patchstash{% endblock %}

{% block stylesheets %}{{ include('security/_auth_styles.html.twig') }}{% endblock %}

{% block body_class %}auth-page{% endblock %}
{% block header %}{% endblock %}
{% block main_class %}auth-main{% endblock %}

{% block body %}
    <div class="auth-card">
        <div class="floating">
            <span class="blob a"></span>
            <span class="blob b"></span>
        </div>

        <section class="auth-hero">
            <span class="pill">Patchstash Platform</span>
            <h1>Sign in to stay ahead of every patch window</h1>
            <p>Fast, secure access to your intelligence and rollouts—tuned for the operators running the day-to-day.</p>
            <div class="hero-points">
                <span><span class="dot"></span>Live risk scoring</span>
                <span><span class="dot"></span>Workflow-aware alerts</span>
                <span><span class="dot"></span>Audit-ready history</span>
            </div>
        </section>

        <section class="auth-body">
            <p class="eyebrow">Secure access</p>
            <h2 class="auth-title">Welcome back</h2>
            <p class="auth-sub">Use your Patchstash credentials to continue.</p>

            {% if error %}
                <div class="alert" style="padding: 1rem; margin-bottom: 1rem; border-radius: 8px; background: #fee; color: #c00; border: 1px solid currentColor;">
                    Invalid credentials. Please check your username and password.
                </div>
            {% endif %}

            <form class="auth-form" method="post" action="{{ path('app_login') }}">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input
                        id="username"
                        name="_username"
                        type="text"
                        value="{{ last_username }}"
                        placeholder="admin"
                        autocomplete="username"
                        required
                    >
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input
                        id="password"
                        name="_password"
                        type="password"
                        placeholder="••••••••"
                        autocomplete="current-password"
                        required
                    >
                </div>

                <div class="form-meta">
                    <span>Short sessions keep shared devices safe.</span>
                    <a href="{{ path('app_forgot_password') }}">Forgot password?</a>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn" type="submit">Sign in</button>
            </form>

            <div class="auth-meta">New to Patchstash? <a href="{{ path('app_signup') }}">Create an account</a></div>
        </section>
    </div>
{% endblock %}
