{% block title %}PatchCycle{% endblock %}

{% block body %}
    <h1>PatchCycle</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>CycleId</th>
                <td>{{ patch_cycle.cycleId }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ patch_cycle.status }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ patch_cycle.description }}</td>
            </tr>
            <tr>
                <th>Deadline</th>
