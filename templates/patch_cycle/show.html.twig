{% extends 'admin/base.html.twig' %}

{% block title %}Patch Cycle · {{ patch_cycle.cycleId }}{% endblock %}

{% block admin_content %}
<div class="page-head">
    <div>
        <p class="eyebrow">Patch cycle</p>
        <h1>{{ patch_cycle.cycleId }}</h1>
        <p class="text-muted">Timeline, asset, and risk context.</p>
    </div>
    <div class="actions">
        <a class="btn ghost" href="{{ path('app_patch_cycle_index') }}">Back</a>
        <a class="btn primary" href="{{ path('app_patch_cycle_edit', {'cycleId': patch_cycle.cycleId}) }}">Edit</a>
    </div>
</div>

<div class="admin-panel">
    <div class="meta-grid">
        <div class="detail-block">
            <p class="text-muted">Asset</p>
            <p>{{ patch_cycle.asset ? patch_cycle.asset.name : 'Unassigned' }}</p>
        </div>
        <div class="detail-block">
            <p class="text-muted">Status</p>
            {% set status = patch_cycle.status|default('Pending') %}
            {% set statusClass = {
                'Active': 'active',
                'Pending': 'pending',
                'Deprecated': 'deprecated',
                'Failed': 'failed'
            }[status]|default('pending') %}
            <span class="badge {{ statusClass }}">{{ status }}</span>
        </div>
        <div class="detail-block">
            <p class="text-muted">Deadline</p>
            <p>{{ patch_cycle.deadline ? patch_cycle.deadline|date('M j, Y') : '—' }}</p>
        </div>
        <div class="detail-block">
            <p class="text-muted">Applied</p>
            {% if patch_cycle.appliedDate %}
                <p><span class="badge active">{{ patch_cycle.appliedDate|date('M j, Y') }}</span></p>
            {% else %}
                <p><span class="badge pending">Pending</span></p>
            {% endif %}
        </div>
        <div class="detail-block">
            <p class="text-muted">CVSS</p>
            {% set cvss = patch_cycle.cvss|default(0) %}
            {% set severityClass = cvss >= 9 ? 'critical' : (cvss >= 7 ? 'high' : (cvss >= 4 ? 'medium' : 'low')) %}
            <p><span class="badge {{ severityClass }}">{{ cvss }}</span></p>
        </div>
        <div class="detail-block">
            <p class="text-muted">Info</p>
            <p>{{ patch_cycle.info|default('No additional notes') }}</p>
        </div>
    </div>
    <div class="detail-block" style="margin-top:1rem;">
        <p class="text-muted">Description</p>
        <p>{{ patch_cycle.description }}</p>
    </div>
</div>

{% if patch_cycle.vulnerabilities|length > 0 %}
<div class="admin-panel" style="margin-top:1rem;">
    <header class="panel-header">
        <div>
            <h2>Linked vulnerabilities</h2>
            <p class="text-muted">Severity and CVSS for this cycle.</p>
        </div>
    </header>
    <div class="admin-table">
        <table>
            <thead>
                <tr>
                    <th>CVE</th>
                    <th>Title</th>
                    <th>Severity</th>
                    <th>CVSS</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for vulnerability in patch_cycle.vulnerabilities %}
                {% set sev = vulnerability.severity|default('Medium') %}
                {% set sevClass = {
                    'Critical': 'critical',
                    'High': 'high',
                    'Medium': 'medium',
                    'Low': 'low'
                }[sev]|default('medium') %}
                <tr>
                    <td>{{ vulnerability.cveId }}</td>
                    <td>{{ vulnerability.name }}</td>
                    <td><span class="badge {{ sevClass }}">{{ sev }}</span></td>
                    {% set cvssScore = vulnerability.cvss|default(0) %}
                    {% set cvssClass = cvssScore >= 9 ? 'critical' : (cvssScore >= 7 ? 'high' : (cvssScore >= 4 ? 'medium' : 'low')) %}
                    <td><span class="badge {{ cvssClass }}">{{ cvssScore }}</span></td>
                    <td class="text-end">
                        <div class="table-actions">
                            <a class="btn ghost" href="{{ path('app_vulnerability_show', {'cveId': vulnerability.cveId}) }}">View</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endif %}

{{ include('patch_cycle/_delete_form.html.twig', { patch_cycle: patch_cycle }) }}
{% endblock %}
