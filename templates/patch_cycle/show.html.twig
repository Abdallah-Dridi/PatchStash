            </tr>
            <tr>
                <th>AppliedDate</th>
                <td>{{ patch_cycle.appliedDate ? patch_cycle.appliedDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Cvss</th>
                <td>{{ patch_cycle.cvss }}</td>
