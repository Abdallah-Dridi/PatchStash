{% extends 'base.html.twig' %}

{% block title %}PatchStash - Patch Cycle & Vulnerability Management{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --bg: #070c1a;
            --accent: #a855f7;
            --accent-2: #38bdf8;
            --text: #e5e7eb;
            --text-muted: #9ca3af;
            --border: rgba(88, 28, 135, 0.35);
        }

        body.layout {
            background: radial-gradient(circle at 20% 20%, rgba(168, 85, 247, 0.25), transparent 35%), radial-gradient(circle at 80% 10%, rgba(56, 189, 248, 0.2), transparent 40%), var(--bg) !important;
        }

        .landing-wrapper {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .landing-hero {
            flex: 1;
            padding: 6rem 2rem;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            border-bottom: 1px solid var(--border);
        }

        .hero-content {
            max-width: 900px;
            margin: 0 auto;
        }

        .hero-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
            padding: 0.5rem 1rem;
            border-radius: 999px;
            background: rgba(56, 189, 248, 0.15);
            color: var(--accent-2);
            font-weight: 600;
            font-size: 0.9rem;
            margin-bottom: 1.5rem;
            border: 1px solid rgba(56, 189, 248, 0.3);
        }

        .hero-content h1 {
            font-size: 3.5rem;
            font-weight: 800;
            margin: 0 0 1rem;
            background: linear-gradient(120deg, var(--accent), var(--accent-2));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            line-height: 1.1;
            color: var(--text);
        }

        .hero-content p {
            font-size: 1.2rem;
            color: var(--text-muted);
            margin: 0 0 2rem;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .hero-cta {
            display: flex;
            justify-content: center;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .btn {
            padding: 1rem 2rem;
            border-radius: 12px;
            border: none;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background: linear-gradient(120deg, var(--accent), var(--accent-2));
            color: white;
            box-shadow: 0 10px 25px rgba(168, 85, 247, 0.3);
            border: 1px solid var(--border);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 20px 40px rgba(168, 85, 247, 0.4);
        }

        .btn-secondary {
            background: transparent;
            color: var(--accent-2);
            border: 2px solid var(--accent-2);
        }

        .btn-secondary:hover {
            background: rgba(56, 189, 248, 0.1);
            transform: translateY(-2px);
        }

        .features-section {
            padding: 6rem 2rem;
            background: rgba(10, 16, 32, 0.5);
            border-bottom: 1px solid var(--border);
        }

        .features-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .section-header {
            text-align: center;
            margin-bottom: 4rem;
        }

        .section-header h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin: 0 0 1rem;
            color: var(--text);
        }

        .section-header p {
            color: var(--text-muted);
            font-size: 1.1rem;
            margin: 0;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 2rem;
            margin-bottom: 4rem;
        }

        .feature-card {
            padding: 2rem;
            border-radius: 14px;
            border: 1px solid var(--border);
            background: linear-gradient(145deg, rgba(15, 23, 42, 0.6), rgba(17, 24, 39, 0.5));
            transition: all 0.3s ease;
        }

        .feature-card:hover {
            transform: translateY(-5px);
            border-color: var(--accent);
            box-shadow: 0 20px 40px rgba(168, 85, 247, 0.15);
            background: linear-gradient(145deg, rgba(15, 23, 42, 0.8), rgba(17, 24, 39, 0.7));
        }

        .feature-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }

        .feature-card h3 {
            font-size: 1.3rem;
            font-weight: 700;
            margin: 0 0 0.7rem;
            color: var(--text);
        }

        .feature-card p {
            color: var(--text-muted);
            margin: 0;
            line-height: 1.6;
        }

        .benefits-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .benefit-item {
            display: flex;
            gap: 1rem;
        }

        .benefit-check {
            color: var(--accent-2);
            font-weight: 700;
            font-size: 1.5rem;
            flex-shrink: 0;
        }

        .benefit-item h4 {
            font-size: 1rem;
            font-weight: 600;
            margin: 0 0 0.3rem;
            color: var(--text);
        }

        .benefit-item p {
            color: var(--text-muted);
            margin: 0;
            font-size: 0.95rem;
        }

        .cta-section {
            background: linear-gradient(145deg, rgba(168, 85, 247, 0.1), rgba(56, 189, 248, 0.08));
            padding: 5rem 2rem;
            text-align: center;
            border-bottom: 1px solid var(--border);
        }

        .cta-content {
            max-width: 600px;
            margin: 0 auto;
        }

        .cta-content h2 {
            font-size: 2rem;
            font-weight: 700;
            margin: 0 0 1rem;
            color: var(--text);
        }

        .cta-content p {
            color: var(--text-muted);
            margin: 0 0 2rem;
            font-size: 1.1rem;
        }

        .footer-section {
            background: rgba(10, 16, 32, 0.8);
            color: var(--text);
            padding: 4rem 2rem;
            text-align: center;
            border-top: 1px solid var(--border);
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
        }

        .footer-text {
            color: var(--text-muted);
            margin: 0;
        }

        @media (max-width: 768px) {
            .hero-content h1 {
                font-size: 2rem;
            }

            .landing-hero {
                padding: 3rem 1rem;
            }

            .features-section {
                padding: 3rem 1rem;
            }

            .cta-section {
                padding: 3rem 1rem;
            }
        }
    </style>
{% endblock %}

