{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block admin_content %}
    {{ parent() }}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
             <div style="margin-bottom: 2rem; padding: 1rem; border-radius: 12px; background: {% if type == 'error' %}rgba(239, 68, 68, 0.2){% elseif type == 'success' %}rgba(34, 197, 94, 0.2){% else %}rgba(59, 130, 246, 0.2){% endif %}; color: #f8fafc; border: 1px solid {% if type == 'error' %}rgba(239, 68, 68, 0.4){% elseif type == 'success' %}rgba(34, 197, 94, 0.4){% else %}rgba(59, 130, 246, 0.4){% endif %};">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    
    {% block user_content %}{% endblock %}
{% endblock %}
