{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --bg: #070c1a;
            --panel: rgba(10, 16, 32, 0.95);
            --panel-alt: rgba(12, 18, 35, 0.85);
            --border: rgba(88, 28, 135, 0.35);
            --text: #e5e7eb;
            --text-muted: #9ca3af;
            --accent: #a855f7;
            --accent-2: #38bdf8;
            color-scheme: dark;
        }

        body.user-shell-wrapper {
            background: radial-gradient(circle at 20% 20%, rgba(168, 85, 247, 0.25), transparent 35%), 
                        radial-gradient(circle at 80% 10%, rgba(56, 189, 248, 0.2), transparent 40%), 
                        var(--bg);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            color: var(--text);
        }
        
        header.shell {
            flex-shrink: 0;
        }

        .user-main {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .user-content {
            flex: 1;
            max-width: 1400px;
            margin: 0 auto;
            width: 100%;
            padding: 2rem 1.5rem;
        }

        .page-head {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid rgba(148, 163, 184, 0.12);
        }

        .page-head > div:first-child h1 {
            margin: 0.5rem 0 0;
            font-size: 2rem;
            color: #f8fafc;
            font-weight: 700;
        }

        .page-head .eyebrow {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.2em;
            color: #a5b4fc;
            margin: 0;
            font-weight: 600;
        }

        .page-head .text-muted {
            color: var(--text-muted);
            margin: 0.5rem 0 0;
            font-size: 0.95rem;
        }

        .actions {
            display: flex;
            gap: 0.75rem;
        }

        .btn {
            padding: 0.65rem 1.25rem;
            border-radius: 12px;
            border: none;
            background: rgba(255, 255, 255, 0.05);
            color: #e5e7eb;
            border: 1px solid rgba(148, 163, 184, 0.2);
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            cursor: pointer;
            transition: transform 0.15s ease, box-shadow 0.2s ease, background 0.2s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn:hover {
            transform: translateY(-1px);
            background: rgba(255, 255, 255, 0.08);
        }

        .btn.primary {
            background: linear-gradient(120deg, var(--accent), var(--accent-2));
            color: #fff;
            border: none;
            box-shadow: 0 12px 25px rgba(88, 28, 135, 0.38);
        }

        .btn.primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 35px rgba(88, 28, 135, 0.45);
        }

        .btn.ghost {
            background: transparent;
            border: none;
            color: var(--text-muted);
        }

        .btn.ghost:hover {
            color: #f8fafc;
            background: rgba(168, 85, 247, 0.1);
        }

        .btn.danger {
            background: rgba(239, 68, 68, 0.2);
            color: #fecdd3;
            border: 1px solid rgba(239, 68, 68, 0.35);
        }

        .btn.danger:hover {
            background: rgba(239, 68, 68, 0.3);
            box-shadow: 0 12px 25px rgba(239, 68, 68, 0.2);
        }

        .admin-panel {
            border-radius: 20px;
            padding: 1.5rem;
            background: var(--panel-alt);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.35);
            border: 1px solid var(--border);
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .admin-panel h2 {
            margin: 0 0 1.5rem 0;
            font-size: 1.25rem;
            color: #f8fafc;
            border-bottom: 1px solid var(--border);
            padding-bottom: 1rem;
        }

        .admin-panel label {
            display: block;
            font-size: 0.9rem;
            font-weight: 600;
            color: #a5b4fc;
            margin-bottom: 0.5rem;
            letter-spacing: 0.02em;
        }

        .admin-panel input[type="text"],
        .admin-panel input[type="email"],
        .admin-panel input[type="password"],
        .admin-panel input[type="url"],
        .admin-panel input[type="number"],
        .admin-panel input[type="date"],
        .admin-panel input[type="datetime-local"],
        .admin-panel select,
        .admin-panel textarea {
            width: 100%;
            padding: 0.6rem 0.85rem;
            border-radius: 10px;
            border: 1px solid rgba(148, 163, 184, 0.2);
            background: rgba(15, 23, 42, 0.6);
            color: #f8fafc;
            font-size: 0.9rem;
            transition: border-color 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
            font-family: inherit;
        }

        .admin-panel input::placeholder,
        .admin-panel textarea::placeholder {
            color: rgba(148, 163, 184, 0.5);
        }

        .admin-panel input:focus,
        .admin-panel select:focus,
        .admin-panel textarea:focus {
            outline: none;
            border-color: var(--accent);
            box-shadow: 0 0 0 3px rgba(168, 85, 247, 0.15), 0 8px 25px rgba(88, 28, 135, 0.25);
            background: rgba(15, 23, 42, 0.8);
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 1rem;
        }

        .form-footer {
            display: flex;
            justify-content: flex-end;
            gap: 0.6rem;
            margin-top: 1.25rem;
            padding-top: 1.5rem;
            border-top: 1px solid var(--border);
        }

        .admin-table {
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
            color: #e5e7eb;
        }

        table th,
        table td {
            text-align: left;
            padding: 0.65rem 0.4rem;
            border-bottom: 1px solid rgba(148, 163, 184, 0.12);
        }

        table th {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.08em;
            color: #a5b4fc;
            font-weight: 600;
        }

        table tbody tr:hover {
            background: rgba(168, 85, 247, 0.1);
        }

        .table-actions {
            display: inline-flex;
            gap: 0.4rem;
            align-items: center;
            justify-content: flex-end;
        }

        .badge {
            display: inline-flex;
            align-items: center;
            gap: 0.35rem;
            padding: 0.25rem 0.65rem;
            border-radius: 999px;
            font-weight: 600;
            font-size: 0.8rem;
            border: 1px solid rgba(255, 255, 255, 0.08);
        }

        .badge.critical { background: rgba(239, 68, 68, 0.18); color: #fecdd3; border-color: rgba(239, 68, 68, 0.35); }
        .badge.high { background: rgba(249, 115, 22, 0.2); color: #ffd7ba; border-color: rgba(249, 115, 22, 0.35); }
        .badge.medium { background: rgba(251, 191, 36, 0.2); color: #fef9c3; border-color: rgba(251, 191, 36, 0.35); }
        .badge.low { background: rgba(56, 189, 248, 0.2); color: #bae6fd; border-color: rgba(56, 189, 248, 0.35); }
        .badge.active { background: rgba(34, 197, 94, 0.2); color: #bbf7d0; border-color: rgba(34, 197, 94, 0.35); }
        .badge.pending { background: rgba(251, 191, 36, 0.14); color: #fef3c7; border-color: rgba(251, 191, 36, 0.3); }
        .badge.deprecated { background: rgba(148, 163, 184, 0.18); color: #e2e8f0; border-color: rgba(148, 163, 184, 0.32); }
        .badge.failed { background: rgba(239, 68, 68, 0.2); color: #fecdd3; border-color: rgba(239, 68, 68, 0.35); }
        .badge.neutral { background: rgba(99, 102, 241, 0.16); color: #e0e7ff; border-color: rgba(99, 102, 241, 0.32); }
        .badge.applied { background: rgba(34, 197, 94, 0.2); color: #bbf7d0; border-color: rgba(34, 197, 94, 0.35); }

        .card-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.2rem;
            margin-top: 1.5rem;
        }

        .card {
            background: var(--panel-alt);
            border: 1px solid var(--border);
            border-radius: 18px;
            padding: 1.5rem;
            text-decoration: none;
            color: inherit;
            transition: all 0.2s ease;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
        }

        .card:hover {
            transform: translateY(-4px);
            border-color: var(--accent);
            box-shadow: 0 15px 40px rgba(168, 85, 247, 0.25);
        }

        .card h3 {
            margin: 0 0 0.5rem;
            color: #f8fafc;
        }

        .card p {
            margin: 0;
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        .panel-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .section-divider {
            border-top: 1px solid var(--border);
            margin: 1.5rem 0;
        }

        .section {
            padding: 1.5rem 0;
            border-bottom: 1px solid var(--border);
        }

        .section:last-child {
            border-bottom: none;
        }

        .section h3 {
            margin: 0 0 0.5rem;
            color: #f8fafc;
            font-size: 1.1rem;
        }

        .details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 1.5rem;
            margin-top: 1rem;
        }

        .details-grid > div {
            padding: 1rem;
            border-radius: 12px;
            border: 1px solid rgba(148, 163, 184, 0.12);
            background: rgba(15, 23, 42, 0.55);
        }

        .details-grid .label {
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 0.08em;
            color: #a5b4fc;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .details-grid p {
            margin: 0;
            color: #e5e7eb;
            line-height: 1.5;
        }

        .empty-state {
            text-align: center;
            padding: 3rem;
            color: var(--text-muted);
            background: var(--panel-alt);
            border-radius: 20px;
            border: 1px solid var(--border);
        }

        .empty-state h3 {
            color: #f8fafc;
            margin-bottom: 0.5rem;
        }

        @media (max-width: 768px) {
            .page-head {
                flex-direction: column;
                gap: 1rem;
            }

            .actions {
                flex-direction: column;
                width: 100%;
            }

            .actions .btn {
                width: 100%;
                justify-content: center;
            }

            .user-content {
                padding: 1.5rem 1rem;
            }

            .form-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}

{% block body_class %}user-shell-wrapper{% endblock %}

{% block body %}
<div class="user-main">
    {% block header %}
        <header class="shell">
            <nav class="topnav">
                <a href="{{ path('app_dashboard') }}" class="brand">Patchstash</a>
                <div class="nav-links">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_admin_dashboard') }}">Admin</a>
                    {% endif %}
                    {% if app.user %}
                        <span class="muted">Hi {{ app.user.username }}</span>
                        <a href="{{ path('app_logout') }}">Logout</a>
                    {% else %}
                        <a href="{{ path('app_login') }}">Login</a>
                    {% endif %}
                </div>
            </nav>
        </header>
    {% endblock %}

    {# Display flash messages #}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-message flash-{{ type }} shell" style="margin-top: 1rem; padding: 1rem; border-radius: 0.5rem; {% if type == 'error' %}background: #7f1d1d; color: #fee2e2; border-left: 4px solid #dc2626;{% elseif type == 'success' %}background: #15803d; color: #dcfce7; border-left: 4px solid #22c55e;{% elseif type == 'warning' %}background: #7c2d12; color: #fed7aa; border-left: 4px solid #ea580c;{% else %}background: #1e40af; color: #dbeafe; border-left: 4px solid #3b82f6;{% endif %}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="user-content">
        {% block user_content %}{% endblock %}
    </div>
</div>
{% endblock %}
