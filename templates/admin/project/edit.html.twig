{% extends 'admin/base.html.twig' %}

{% block title %}Edit Project{% endblock %}

{% block admin_content %}
<div class="page-head">
    <div>
        <p class="eyebrow">Update</p>
        <h1>Edit project</h1>
        <p class="text-muted">{{ project.name }}</p>
    </div>
    <div class="actions">
        <a class="btn ghost" href="{{ path('app_admin_projects') }}">Back</a>
    </div>
</div>

{{ include('admin/project/_form.html.twig', {'button_label': 'Update Project'}) }}

<div class="section-divider"></div>

<div class="section">
    <h3>Danger Zone</h3>
    <p class="text-muted">Permanently delete this project.</p>
    {{ include('admin/project/_delete_form.html.twig') }}
</div>
{% endblock %}
