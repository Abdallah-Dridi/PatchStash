{% extends 'admin/base.html.twig' %}

{% block title %}Admin Dashboard · Patchstash{% endblock %}

{% block admin_content %}
    <div class="admin-grid">
        {% for stat in stats %}
            <article class="stat-card">
                <div>
                    <p class="stat-label">{{ stat.label }}</p>
                    <p class="stat-value">{{ stat.value }}</p>
                </div>
                <div class="stat-meta">
                    <span class="sparkline">•••••</span>
                    <span class="stat-pill">Live</span>
                </div>
            </article>
        {% endfor %}
        <article class="stat-card highlight">
            <div>
                <p class="stat-label">Automation</p>
                <p class="stat-value">Trigger a workflow</p>
            </div>
            <button class="btn outline" disabled>Launch Playbook</button>
        </article>
    </div>

    <div class="quick-actions">
        <div class="action-card">
            <h3>Invite teammate</h3>
            <p>Add operators or auditors to collaborate.</p>
            <a class="btn ghost" href="{{ path('app_admin_users_new') }}">Send invite</a>
        </div>
        <div class="action-card">
            <h3>Schedule maintenance</h3>
            <p>Block a window for infrastructure patching.</p>
            <a class="btn ghost" href="{{ path('app_patch_cycle_new') }}">Plan window</a>
        </div>
        <div class="action-card">
            <h3>Sync integrations</h3>
            <p>Refresh asset inventory from CMDB.</p>
            <button class="btn ghost" disabled>Run sync</button>
        </div>
    </div>

    <div class="admin-section">
        <div class="admin-panel">
            <header class="panel-header">
                <div>
                    <h2>Upcoming patch cycles</h2>
                    <p class="text-muted">Soonest deadlines across all assets.</p>
                </div>
                <a class="btn ghost" href="{{ path('app_patch_cycle_index') }}">Manage</a>
            </header>
            <div class="admin-table">
                <table>
                    <thead>
                        <tr>
                            <th>Cycle</th>
                            <th>Asset</th>
                            <th>Status</th>
                            <th>Deadline</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for cycle in recent_patch_cycles %}
                        <tr>
                            <td>{{ cycle.cycleId }}</td>
                            <td>{{ cycle.asset ? cycle.asset.name : 'Unassigned' }}</td>
                            <td><span class="status-pill">{{ cycle.status }}</span></td>
                            <td>{{ cycle.deadline ? cycle.deadline|date('M d, Y') : '—' }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-muted">No patch cycles yet.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="admin-panel">
            <header class="panel-header">
                <div>
                    <h2>Highest risk CVEs</h2>
                    <p class="text-muted">Top vulnerabilities sorted by CVSS.</p>
                </div>
                <a class="btn ghost" href="{{ path('app_vulnerability_index') }}">View all</a>
            </header>
            <div class="admin-table">
                <table>
                    <thead>
                        <tr>
                            <th>CVE</th>
                            <th>Severity</th>
                            <th>CVSS</th>
                            <th>Patch Cycle</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for vuln in critical_vulnerabilities %}
                        <tr>
                            <td>{{ vuln.cveId }}</td>
                            <td>{{ vuln.severity }}</td>
                            <td>
                                <span class="cvss-meter">
                                    <span style="width: {{ (vuln.cvss / 10) * 100 }}%"></span>
                                </span>
                                {{ vuln.cvss }}
                            </td>
                            <td>{{ vuln.patchCycle ? vuln.patchCycle.cycleId : 'Unassigned' }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-muted">No vulnerabilities recorded.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="timeline">
        <h2>Activity feed</h2>
        <ul>
            <li>
                <span class="dot"></span>
                <div>
                    <strong>Patch cycle PC-2024-07-MBL staged</strong>
                    <p class="text-muted">Mobile team validated latest WebView release.</p>
                    <small>2h ago</small>
                </div>
            </li>
            <li>
                <span class="dot"></span>
                <div>
                    <strong>Admin exported vulnerability report</strong>
                    <p class="text-muted">Report delivered to Security PMs.</p>
                    <small>Yesterday</small>
                </div>
            </li>
            <li>
                <span class="dot"></span>
                <div>
                    <strong>Integration sync queued</strong>
                    <p class="text-muted">CMDB asset import scheduled.</p>
                    <small>2 days ago</small>
                </div>
            </li>
        </ul>
    </div>
{% endblock %}
