{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard · Patchstash{% endblock %}

{% block body %}
    <div class="admin-shell">
        <aside class="admin-sidebar">
            <div class="admin-brand">
                <span class="admin-logo">⬢</span>
                Patchstash Admin
            </div>
            <div class="admin-search">
                <input type="search" placeholder="Jump to resource…" disabled>
            </div>
            <nav class="admin-nav">
                <a class="active" href="{{ path('app_admin_dashboard') }}"><span>⌘</span> Overview</a>
                <span class="nav-label">Directory</span>
                <a href="#"><span>U</span> Users</a>
                <a href="#"><span>P</span> Projects</a>
                <a href="#"><span>M</span> Modules</a>
                <a href="#"><span>A</span> Assets</a>
                <span class="nav-label">Operations</span>
                <a href="#"><span>PC</span> Patch Cycles</a>
                <a href="#"><span>V</span> Vulnerabilities</a>
                <a href="#"><span>R</span> Reports</a>
                <span class="nav-label">Configuration</span>
                <a href="#"><span>RP</span> Roles &amp; Permissions</a>
                <a href="#"><span>INT</span> Integrations</a>
            </nav>
            <div class="admin-footnote">
                <p>Need automation?</p>
                <a href="#">Open API Console →</a>
            </div>
        </aside>

        <div class="admin-main">
            <header class="admin-topbar">
                <div>
                    <p class="eyebrow">Platform health</p>
                    <h1>Command Center</h1>
                    <p class="text-muted">Monitor posture and trigger workflows from one place.</p>
                </div>
                <div class="admin-topbar-actions">
                    <button class="btn ghost" disabled>Export data</button>
                    <button class="btn primary" disabled>Create report</button>
                </div>
            </header>

            <div class="admin-content">
                <div class="admin-grid">
                    {% for stat in stats %}
                        <article class="stat-card">
                            <div>
                                <p class="stat-label">{{ stat.label }}</p>
                                <p class="stat-value">{{ stat.value }}</p>
                            </div>
                            <div class="stat-meta">
                                <span class="sparkline">•••••</span>
                                <span class="stat-pill">Live</span>
                            </div>
                        </article>
                    {% endfor %}
                    <article class="stat-card highlight">
                        <div>
                            <p class="stat-label">Automation</p>
                            <p class="stat-value">Trigger a workflow</p>
                        </div>
                        <button class="btn outline" disabled>Launch Playbook</button>
                    </article>
                </div>

                <div class="quick-actions">
                    <div class="action-card">
                        <h3>Invite teammate</h3>
                        <p>Add operators or auditors to collaborate.</p>
                        <button class="btn ghost" disabled>Send invite</button>
                    </div>
                    <div class="action-card">
                        <h3>Schedule maintenance</h3>
                        <p>Block a window for infrastructure patching.</p>
                        <button class="btn ghost" disabled>Plan window</button>
                    </div>
                    <div class="action-card">
                        <h3>Sync integrations</h3>
                        <p>Refresh asset inventory from CMDB.</p>
                        <button class="btn ghost" disabled>Run sync</button>
                    </div>
                </div>

                <div class="admin-section">
                    <div class="admin-panel">
                        <header class="panel-header">
                            <div>
                                <h2>Upcoming patch cycles</h2>
                                <p class="text-muted">Soonest deadlines across all assets.</p>
                            </div>
                            <button class="btn ghost" disabled>Manage</button>
                        </header>
                        <div class="admin-table">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Cycle</th>
                                        <th>Asset</th>
                                        <th>Status</th>
                                        <th>Deadline</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for cycle in recent_patch_cycles %}
                                    <tr>
                                        <td>{{ cycle.cycleId }}</td>
                                        <td>{{ cycle.asset ? cycle.asset.name : 'Unassigned' }}</td>
                                        <td><span class="status-pill">{{ cycle.status }}</span></td>
                                        <td>{{ cycle.deadline ? cycle.deadline|date('M d, Y') : '—' }}</td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4" class="text-muted">No patch cycles yet.</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="admin-panel">
                        <header class="panel-header">
                            <div>
                                <h2>Highest risk CVEs</h2>
                                <p class="text-muted">Top vulnerabilities sorted by CVSS.</p>
                            </div>
                            <button class="btn ghost" disabled>View all</button>
                        </header>
                        <div class="admin-table">
                            <table>
                                <thead>
                                    <tr>
                                        <th>CVE</th>
                                        <th>Severity</th>
                                        <th>CVSS</th>
                                        <th>Patch Cycle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for vuln in critical_vulnerabilities %}
                                    <tr>
                                        <td>{{ vuln.cveId }}</td>
                                        <td>{{ vuln.severity }}</td>
                                        <td>
                                            <span class="cvss-meter">
                                                <span style="width: {{ (vuln.cvss / 10) * 100 }}%"></span>
                                            </span>
                                            {{ vuln.cvss }}
                                        </td>
                                        <td>{{ vuln.patchCycle ? vuln.patchCycle.cycleId : 'Unassigned' }}</td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4" class="text-muted">No vulnerabilities recorded.</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="timeline">
                    <h2>Activity feed</h2>
                    <ul>
                        <li>
                            <span class="dot"></span>
                            <div>
                                <strong>Patch cycle PC-2024-07-MBL staged</strong>
                                <p class="text-muted">Mobile team validated latest WebView release.</p>
                                <small>2h ago</small>
                            </div>
                        </li>
                        <li>
                            <span class="dot"></span>
                            <div>
                                <strong>Admin exported vulnerability report</strong>
                                <p class="text-muted">Report delivered to Security PMs.</p>
                                <small>Yesterday</small>
                            </div>
                        </li>
                        <li>
                            <span class="dot"></span>
                            <div>
                                <strong>Integration sync queued</strong>
                                <p class="text-muted">CMDB asset import scheduled.</p>
                                <small>2 days ago</small>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --bg: #070c1a;
            --panel: rgba(10, 16, 32, 0.9);
            --panel-alt: rgba(12, 18, 35, 0.85);
            --border: rgba(88, 28, 135, 0.35);
            --text: #e5e7eb;
            --text-muted: #9ca3af;
            --accent: #a855f7;
            --accent-2: #38bdf8;
        }

        .admin-shell {
            display: flex;
            min-height: calc(100vh - 2rem);
            gap: 1.5rem;
            background: radial-gradient(circle at 20% 20%, rgba(168, 85, 247, 0.25), transparent 35%), radial-gradient(circle at 80% 10%, rgba(56, 189, 248, 0.2), transparent 40%), var(--bg);
            color: var(--text);
        }

        .admin-sidebar {
            background: linear-gradient(145deg, rgba(15, 23, 42, 0.95), rgba(17, 24, 39, 0.9));
            color: #f8fafc;
            padding: 2rem 1.5rem;
            width: 260px;
            border-radius: 20px;
            position: sticky;
            top: 1rem;
            height: calc(100vh - 2rem);
            display: flex;
            flex-direction: column;
            gap: 1.2rem;
            border: 1px solid var(--border);
            box-shadow: 0 25px 60px rgba(0, 0, 0, 0.45);
        }

        .admin-brand { font-weight: 600; display: flex; align-items: center; gap: 0.6rem; font-size: 1.1rem; }
        .admin-logo { color: var(--accent); font-size: 1.4rem; }

        .admin-search input {
            width: 100%;
            border-radius: 12px;
            border: 1px solid rgba(248, 250, 252, 0.14);
            padding: 0.75rem 0.85rem;
            background: rgba(248, 250, 252, 0.05);
            color: rgba(248, 250, 252, 0.85);
        }
        .admin-search input::placeholder { color: rgba(248, 250, 252, 0.4); }

        .admin-nav { display: flex; flex-direction: column; gap: 0.4rem; }
        .admin-nav a {
            color: rgba(248, 250, 252, 0.85);
            padding: 0.55rem 0.75rem;
            border-radius: 12px;
            transition: background 0.2s ease, color 0.2s ease, box-shadow 0.2s ease;
            display: flex;
            align-items: center;
            gap: 0.65rem;
            font-size: 0.95rem;
            border: 1px solid transparent;
        }
        .admin-nav a.active, .admin-nav a:hover {
            background: linear-gradient(120deg, rgba(168, 85, 247, 0.25), rgba(56, 189, 248, 0.2));
            color: #f8fafc;
            border-color: var(--border);
            box-shadow: 0 12px 30px rgba(88, 28, 135, 0.32);
        }
        .nav-label { margin-top: 1.2rem; font-size: 0.72rem; letter-spacing: 0.08em; text-transform: uppercase; color: rgba(248, 250, 252, 0.55); }
        .admin-nav a span {
            display: inline-flex; width: 28px; height: 28px; border-radius: 10px;
            background: rgba(248, 250, 252, 0.1); align-items: center; justify-content: center; font-size: 0.75rem;
        }

        .admin-footnote { margin-top: auto; font-size: 0.85rem; color: rgba(248, 250, 252, 0.75); }
        .admin-footnote a { color: var(--accent-2); }

        .admin-main { flex: 1; display: flex; flex-direction: column; padding: 1.5rem 1.5rem 1.5rem 0; }
        .admin-topbar { display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; padding-bottom: 1rem; border-bottom: 1px solid rgba(148, 163, 184, 0.12); }
        .admin-topbar-actions { display: flex; gap: 0.75rem; }

        .btn { border: none; border-radius: 12px; padding: 0.65rem 1rem; font-weight: 600; cursor: pointer; transition: transform 0.15s ease, box-shadow 0.2s ease; }
        .btn:hover { transform: translateY(-1px); }
        .btn.primary { background: linear-gradient(120deg, var(--accent), var(--accent-2)); color: #fff; box-shadow: 0 12px 25px rgba(88, 28, 135, 0.38); }
        .btn.ghost { background: rgba(255, 255, 255, 0.05); color: #e5e7eb; border: 1px solid rgba(148, 163, 184, 0.2); }
        .btn.outline { border: 1px dashed rgba(168, 85, 247, 0.6); background: transparent; color: #e5e7eb; }

        .admin-content {
            background: var(--panel);
            border-radius: 24px;
            padding: 2rem;
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.4);
            display: flex;
            flex-direction: column;
            gap: 2rem;
            border: 1px solid rgba(148, 163, 184, 0.08);
            backdrop-filter: blur(10px);
        }

        .eyebrow { text-transform: uppercase; letter-spacing: 0.2em; font-size: 0.75rem; color: #a5b4fc; margin: 0; }
        h1 { margin: 0.2rem 0 0; }
        .text-muted { color: var(--text-muted); font-size: 0.95rem; }
        section { margin-bottom: 2rem; }

        .admin-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-top: 1.5rem; }

        .stat-card {
            border-radius: 18px;
            padding: 1.4rem;
            background: linear-gradient(135deg, rgba(168, 85, 247, 0.18), rgba(56, 189, 248, 0.14));
            border: 1px solid rgba(148, 163, 184, 0.25);
            position: relative;
            overflow: hidden;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 15px 40px rgba(88, 28, 135, 0.25);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        .stat-card:hover { transform: translateY(-4px); box-shadow: 0 20px 50px rgba(88, 28, 135, 0.32); }
        .stat-label { margin: 0; font-size: 0.9rem; color: #cbd5e1; }
        .stat-value { margin: 0.35rem 0 0; font-size: 2rem; font-weight: 600; color: #f8fafc; }
        .stat-meta { display: flex; flex-direction: column; align-items: flex-end; gap: 0.3rem; }
        .sparkline { font-size: 0.9rem; letter-spacing: 0.15em; color: rgba(248, 250, 252, 0.35); }
        .stat-pill { font-size: 0.75rem; padding: 0.2rem 0.7rem; border-radius: 999px; background: rgba(12, 74, 110, 0.3); color: #e0f2fe; border: 1px solid rgba(56, 189, 248, 0.4); }
        .stat-card.highlight { border: 1px dashed rgba(168, 85, 247, 0.6); background: rgba(15, 23, 42, 0.35); flex-direction: column; align-items: flex-start; gap: 0.8rem; }

        .quick-actions { display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 1rem; }
        .action-card {
            padding: 1.2rem;
            border-radius: 16px;
            border: 1px solid rgba(148, 163, 184, 0.2);
            background: linear-gradient(145deg, rgba(26, 35, 63, 0.9), rgba(15, 23, 42, 0.9));
            display: flex;
            flex-direction: column;
            gap: 0.6rem;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.35);
        }

        .admin-section { display: grid; grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); gap: 1.5rem; }
        .admin-panel {
            border-radius: 20px;
            padding: 1.5rem;
            background: var(--panel-alt);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.35);
            border: 1px solid var(--border);
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }
        .panel-header { display: flex; justify-content: space-between; align-items: center; }
        .admin-table { overflow-x: auto; }

        table { width: 100%; border-collapse: collapse; margin-top: 1rem; color: #e5e7eb; }
        th, td { text-align: left; padding: 0.65rem 0.4rem; border-bottom: 1px solid rgba(148, 163, 184, 0.12); }
        th { font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.08em; color: #a5b4fc; font-weight: 600; }

        .status-pill { display: inline-flex; padding: 0.2rem 0.6rem; border-radius: 999px; background: rgba(56, 189, 248, 0.15); color: #38bdf8; font-size: 0.8rem; border: 1px solid rgba(56, 189, 248, 0.35); }

        .cvss-meter { display: inline-flex; width: 80px; height: 6px; border-radius: 999px; background: rgba(148, 163, 184, 0.25); margin-right: 0.4rem; overflow: hidden; }
        .cvss-meter span { display: block; height: 100%; background: linear-gradient(120deg, #ef4444, #fbbf24); }

        .timeline {
            border-radius: 20px;
            border: 1px solid rgba(148, 163, 184, 0.2);
            padding: 1.5rem;
            background: rgba(12, 18, 35, 0.85);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.35);
        }
        .timeline ul { list-style: none; margin: 1rem 0 0; padding: 0; }
        .timeline li { display: flex; gap: 1rem; padding: 1rem 0; border-top: 1px solid rgba(226, 232, 240, 0.15); }
        .timeline li:first-child { border-top: none; padding-top: 0; }
        .timeline .dot { width: 10px; height: 10px; border-radius: 50%; background: var(--accent-2); margin-top: 0.4rem; box-shadow: 0 0 12px rgba(56, 189, 248, 0.6); }

        @media (max-width: 1024px) {
            .admin-shell { flex-direction: column; }
            .admin-sidebar { position: relative; height: auto; width: 100%; }
            .admin-main { padding: 0; }
        }
    </style>
{% endblock %}
