{% extends 'admin/base.html.twig' %}

{% block title %}Edit Asset{% endblock %}

{% block admin_content %}
<div class="page-head">
    <div>
        <p class="eyebrow">Update</p>
        <h1>Edit asset</h1>
        <p class="text-muted">{{ asset.name }}</p>
    </div>
    <div class="actions">
        <a class="btn ghost" href="{{ path('app_admin_assets') }}">Back</a>
    </div>
</div>

{{ include('admin/asset/_form.html.twig', {'button_label': 'Update Asset'}) }}

<div class="section-divider"></div>

<div class="section">
    <h3>Danger Zone</h3>
    <p class="text-muted">Permanently delete this asset.</p>
    {{ include('admin/asset/_delete_form.html.twig') }}
</div>
{% endblock %}
