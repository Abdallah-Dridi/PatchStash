{{ form_start(form, {'attr': {'class': 'admin-panel'}}) }}
    <h2 style="margin-top:0;">User details</h2>
    <div class="form-grid">
        <div>{{ form_row(form.username) }}</div>
        <div>{{ form_row(form.email) }}</div>
        <div>{{ form_row(form.role) }}</div>
        <div>
            {{ form_row(form.plainPassword) }}
            <p class="text-muted" style="font-size:0.85rem; margin:0.35rem 0 0;">Leave blank to keep the current password.</p>
        </div>
    </div>
    <div class="form-footer">
        <a class="btn ghost" href="{{ path('app_admin_users') }}">Cancel</a>
        <button class="btn primary">{{ button_label|default('Save user') }}</button>
    </div>
{{ form_end(form) }}
