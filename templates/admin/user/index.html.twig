{% extends 'base.html.twig' %}

{% block title %}Users Â· Admin{% endblock %}

{% block body %}
    <div class="shell" style="padding-top:2rem;">
        <div style="display:flex;justify-content:space-between;align-items:center;margin-bottom:1rem;">
            <div>
                <p class="eyebrow">Directory</p>
                <h1>Users</h1>
                <p class="text-muted">Manage platform accounts and roles.</p>
            </div>
            <a class="btn primary" href="{{ path('app_admin_users_new') }}">New user</a>
        </div>

        <div class="admin-table">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.role }}</td>
                        <td>
                            <a href="{{ path('app_admin_users_show', {'id': user.id}) }}">view</a>
                            <a href="{{ path('app_admin_users_edit', {'id': user.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-muted">No users found.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
