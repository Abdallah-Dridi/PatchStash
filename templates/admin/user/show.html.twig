{% extends 'base.html.twig' %}

{% block title %}User Details · Admin{% endblock %}

{% block body %}
    <div class="shell" style="padding-top:2rem; max-width:720px;">
        <p class="eyebrow">Directory</p>
        <h1>{{ user.username }}</h1>
        <p class="text-muted">{{ user.email }}</p>

        <table class="table" style="width:100%; margin:1.2rem 0;">
            <tbody>
                <tr>
                    <th style="text-align:left;">ID</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th style="text-align:left;">Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th style="text-align:left;">Role</th>
                    <td>{{ user.role }}</td>
                </tr>
            </tbody>
        </table>

        <div style="display:flex; gap:1rem; align-items:center;">
            <a href="{{ path('app_admin_users') }}">← Back</a>
            <a href="{{ path('app_admin_users_edit', {'id': user.id}) }}">Edit</a>
            {{ include('admin/user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
