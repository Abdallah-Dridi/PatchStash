<aside class="admin-sidebar">
    <div class="admin-brand">
        <span class="admin-logo">⬢</span>
        Patchstash Admin
    </div>
    <div class="admin-search">
        <input type="search" placeholder="Jump to resource…" disabled>
    </div>
    <nav class="admin-nav">
        <a class="active" href="{{ path('app_dashboard') }}"><span>⌘</span> Overview</a>
        
        <span class="nav-label">Directory</span>
        {% if is_granted('ROLE_ADMIN') %}<a href="{{ path('app_admin_users') }}"><span>U</span> Users</a>{% endif %}
        
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_admin_projects') }}"><span>P</span> Projects</a>
        {% elseif is_granted('ROLE_PROJECTMANAGER') or is_granted('ROLE_OPERATOR') or is_granted('ROLE_AUDITOR') %}
             <a href="{{ path('app_project_index') }}"><span>P</span> Projects</a>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_admin_modules') }}"><span>M</span> Modules</a>
            <a href="{{ path('app_admin_assets') }}"><span>A</span> Assets</a>
        {% elseif is_granted('ROLE_PROJECTMANAGER') or is_granted('ROLE_OPERATOR') %}
             <a href="{{ path('app_module_index') }}"><span>M</span> Modules</a>
             <a href="{{ path('app_asset_index') }}"><span>A</span> Assets</a>
        {% endif %}

        <span class="nav-label">Operations</span>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_admin_patch_cycles') }}"><span>PC</span> Patch Cycles</a>
        {% elseif is_granted('ROLE_PROJECTMANAGER') or is_granted('ROLE_OPERATOR') or is_granted('ROLE_AUDITOR') %}
             <a href="{{ path('app_patch_cycle_index') }}"><span>PC</span> Patch Cycles</a>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_admin_vulnerabilities') }}"><span>V</span> Vulnerabilities</a>
        {% elseif is_granted('ROLE_OPERATOR') or is_granted('ROLE_AUDITOR') or is_granted('ROLE_PROJECTMANAGER') %}
             <a href="{{ path('app_vulnerability_index') }}"><span>V</span> Vulnerabilities</a>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') %}
             <a href="{{ path('app_admin_reports') }}"><span>R</span> Reports</a>
        {% elseif is_granted('ROLE_AUDITOR') or is_granted('ROLE_PROJECTMANAGER') %}
             <a href="{{ path('app_report_index') }}"><span>R</span> Reports</a>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') %}
        <span class="nav-label">Configuration</span>
        <a href="{{ path('app_admin_roles') }}"><span>RP</span> Roles &amp; Permissions</a>
        <a href="#"><span>INT</span> Integrations</a>
        {% endif %}

        <span class="nav-label">Account</span>
        <a href="{{ path('app_logout') }}"><span>⏻</span> Logout</a>
    </nav>
    <div class="admin-footnote">
        <p>Need automation?</p>
        <a href="#">Open API Console →</a>
    </div>
</aside>
