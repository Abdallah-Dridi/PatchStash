{% extends 'admin/base.html.twig' %}

{% block title %}{{ module.name }}{% endblock %}

{% block admin_content %}
<div class="page-head">
    <div>
        <p class="eyebrow">Module</p>
        <h1>{{ module.name }}</h1>
        <p class="text-muted">Status: <span class="badge">{{ module.status }}</span></p>
    </div>
    <div class="actions">
        <a class="btn ghost" href="{{ path('app_admin_module_edit', {'id': module.id}) }}">Edit</a>
        <a class="btn ghost" href="{{ path('app_admin_modules') }}">Back</a>
    </div>
</div>

<div class="admin-panel">
    <h2>Details</h2>
    <div class="details-grid">
        <div>
            <p class="label">Project</p>
            <p>{{ module.project.name ?? 'N/A' }}</p>
        </div>
        <div>
            <p class="label">Status</p>
            <p>{{ module.status }}</p>
        </div>
        <div style="grid-column: 1 / -1;">
            <p class="label">Description</p>
            <p>{{ module.description ?? 'No description' }}</p>
        </div>
        <div style="grid-column: 1 / -1;">
            <p class="label">Additional Information</p>
            <p>{{ module.info ?? 'No additional information' }}</p>
        </div>
    </div>
</div>

{% if module.assets is not empty %}
<div class="admin-panel">
    <h2>Assets ({{ module.assets|length }})</h2>
    <table class="data-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for asset in module.assets %}
            <tr>
                <td>{{ asset.name }}</td>
                <td>{{ asset.type }}</td>
                <td><span class="badge">{{ asset.status }}</span></td>
                <td class="actions-cell">
                    <a href="{{ path('app_admin_asset_show', {'id': asset.id}) }}" class="link">View</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endif %}
{% endblock %}
