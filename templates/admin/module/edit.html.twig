{% extends 'admin/base.html.twig' %}

{% block title %}Edit Module{% endblock %}

{% block admin_content %}
<div class="page-head">
    <div>
        <p class="eyebrow">Update</p>
        <h1>Edit module</h1>
        <p class="text-muted">{{ module.name }}</p>
    </div>
    <div class="actions">
        <a class="btn ghost" href="{{ path('app_admin_modules') }}">Back</a>
    </div>
</div>

{{ include('admin/module/_form.html.twig', {'button_label': 'Update Module'}) }}

<div class="section-divider"></div>

<div class="section">
    <h3>Danger Zone</h3>
    <p class="text-muted">Permanently delete this module.</p>
    {{ include('admin/module/_delete_form.html.twig') }}
</div>
{% endblock %}
