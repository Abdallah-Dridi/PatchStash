{% extends 'admin/base.html.twig' %}

{% block title %}Create Report Â· Admin{% endblock %}

{% block admin_content %}
<div class="page-head">
    <div>
        <p class="eyebrow">Reports</p>
        <h1>Create Report</h1>
        <p class="text-muted">Generate a project-related report.</p>
    </div>
    <div class="actions">
        <a class="btn ghost" href="{{ path('app_admin_reports') }}">Back to reports</a>
    </div>
</div>

<div class="admin-panel">
    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.content) }}
    {{ form_row(form.generatedDate) }}
    {{ form_row(form.project) }}
    <div class="form-actions">
        <button class="btn primary">Create</button>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
