{% extends 'user/base.html.twig' %}

{% block title %}Assets · Admin{% endblock %}

{% block user_content %}
<div class="page-head">
    <div>
        <p class="eyebrow">Inventory</p>
        <h1>Assets</h1>
        <p class="text-muted">Systems and components under management.</p>
    </div>
    <div class="actions">
        <form action="{{ path('app_admin_asset_scan') }}" method="POST" style="display: inline;">
            <button type="submit" class="btn secondary">Scan All Assets</button>
        </form>
        <a class="btn primary" href="{{ path('app_asset_new') }}">New asset</a>
    </div>
</div>

<div class="admin-panel">
    <header class="panel-header">
        <div>
            <h2>All assets</h2>
            <p class="text-muted">Module alignment, environments, and status.</p>
        </div>
    </header>
    <div class="admin-table">
        <table>
            <thead>
                <tr>
                    <th>Asset</th>
                    <th>Software</th>
                    <th>Module</th>
                    <th>Env</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for asset in assets %}
                {% set status = asset.status|default('Pending') %}
                {% set statusClass = {
                    'Active': 'active',
                    'Pending': 'pending',
                    'Deprecated': 'deprecated',
                    'Failed': 'failed'
                }[status]|default('pending') %}
                <tr>
                    <td>
                        <strong>{{ asset.name }}</strong>
                        <div class="text-xs text-muted">{{ asset.type }}</div>
                    </td>
                    <td>
                        {% if asset.softwareName %}
                            <code class="text-xs">{{ asset.softwareName }}</code>
                            <span class="badge neutral text-xs">{{ asset.softwareVersion }}</span>
                        {% else %}
                            <span class="text-muted text-xs">—</span>
                        {% endif %}
                    </td>
                    <td class="text-muted">{{ asset.module ? asset.module.name : 'Unassigned' }}</td>
                    <td><span class="badge neutral">{{ asset.environment }}</span></td>
                    <td><span class="badge {{ statusClass }}">{{ status }}</span></td>
                    <td class="text-end">
                        <div class="table-actions">
                            <a class="btn ghost" href="{{ path('app_asset_show', {'id': asset.id}) }}">View</a>
                            <a class="btn primary" href="{{ path('app_asset_edit', {'id': asset.id}) }}">Edit</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-muted">No assets found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
