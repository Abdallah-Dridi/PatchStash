{% extends 'base.html.twig' %}

{% block title %}Asset index{% endblock %}

{% block body %}
    <h1>Asset index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Type</th>
                <th>Environment</th>
                <th>Status</th>
                <th>Info</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for asset in assets %}
            <tr>
                <td>{{ asset.id }}</td>
                <td>{{ asset.name }}</td>
                <td>{{ asset.description }}</td>
                <td>{{ asset.type }}</td>
                <td>{{ asset.environment }}</td>
                <td>{{ asset.status }}</td>
                <td>{{ asset.info }}</td>
                <td>
                    <a href="{{ path('app_asset_show', {'id': asset.id}) }}">show</a>
                    <a href="{{ path('app_asset_edit', {'id': asset.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_asset_new') }}">Create new</a>
{% endblock %}
