{% extends 'user/base.html.twig' %}

{% block title %}Reports Â· Patchstash{% endblock %}

{% block user_content %}
<div class="page-head">
    <div>
        <p class="eyebrow">Compliance</p>
        <h1>Reports</h1>
        <p class="text-muted">Generated security and compliance audit reports.</p>
    </div>
    <div class="actions">
        {% if is_granted('create_report') %}
            <a href="{{ path('app_admin_reports_new') }}" class="btn primary">Create Report</a>
        {% endif %}
    </div>
</div>

<div class="admin-panel">
    <header class="panel-header">
        <div>
            <h2>Audit Reports</h2>
            <p class="text-muted">History of generated documentation.</p>
        </div>
    </header>
    {% if reports is empty %}
        <div class="empty-state">
            <h3>No reports found</h3>
            <p>Generate a new report to get started.</p>
        </div>
    {% else %}
        <div class="admin-table">
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Generated Date</th>
                        <th>Project</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for report in reports %}
                    <tr>
                        <td><strong>{{ report.title }}</strong></td>
                        <td><span class="badge neutral">{{ report.generatedDate ? report.generatedDate|date('M j, Y H:i') : 'Pending' }}</span></td>
                        <td>{{ report.project ? report.project.name : 'N/A' }}</td>
                        <td class="text-end">
                            <a class="btn ghost small" href="#">View</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
