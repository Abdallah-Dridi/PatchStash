# Copy this file to ".env" and tweak values for your environment.
APP_ENV=dev
APP_SECRET=change-this-secret
DEFAULT_URI=http://localhost

# Pick the database backend that suits your setup.
DATABASE_URL="mysql://patchstash:your-password@127.0.0.1:3306/patchstash?serverVersion=8.0.33&charset=utf8mb4"
# DATABASE_URL="mysql://user:pass@db:3306/patchstash?serverVersion=10.11.2-MariaDB&charset=utf8mb4"
# DATABASE_URL="sqlite:///%kernel.project_dir%/var/patchstash_dev.db"

# Choose a Messenger transport (Doctrine queue by default).
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0
# MESSENGER_TRANSPORT_DSN=redis://localhost:6379/messages
# MESSENGER_TRANSPORT_DSN=amqp://guest:guest@localhost:5672/%2f/messages

# Configure the mail transport (null disables email sending).
MAILER_DSN=null://null
MAILER_FROM="Patchstash <contact@yacrb.com>"

